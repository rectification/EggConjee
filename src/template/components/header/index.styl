@import 'styles/variable.styl';

.page-header-wrapper {
    width: 100%;
    height: 50px;
    background-color: #fff;
    box-shadow: 0 1px 3px rgba(26,26,26,.1);

    flex: 0 0 auto;

    display: flex;
    justify-content: center;
}

.page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: width-main;
}

.header-title {
    display: flex;
    align-items: center;

    .site-logo {
        height: 40px;
        width: 40px;
        display: flex;
        margin-right: 10px;
    }

    .site-logo-img {
        height: 100%;
        width: 100%;
    }
    
    .site-title {
        font-family: font-title;
        font-size: 30px;
    }
}
