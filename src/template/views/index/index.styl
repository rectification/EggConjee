@import 'styles/variable.styl';

.posts-list {
    color: Black;
    background-color: #fff;
    box-shadow: 0 1px 3px Shadow;

    .posts-list__item {
        margin: 0;
        padding: 16px 20px;
        box-shadow: none;
        box-sizing: border-box;
        background-color: #fff;
        border-bottom: 1px solid BlackExtraLight;

        font-family: font-default;
        font-weight: normal;
        color: Black;

        &:last-child {
            border-bottom: none;
        }

        .posts-list__item-title {
            font-size: 18px;
            font-weight: 600;
            font-family: font-serif;

            a {
                color: Black;
            }
        }

        .posts-list__item-description {
            font-size: 15px;
            margin-top: 10px;
        }

        .posts-list__item-footer {
            font-size: 12px;
            margin-top: 10px;
            color: BlackLighter;
        }
    }
}
