//Color
color-theme = #2ca6cb
color-background = #ddd
color-font = #817C7C
color-blue = #2ca6cb
color-content = #413F3F
color-white = #ffffff
color-black = #333
color-orange = #ea6753
color-font-nav = #E9CD4C
color-post = #fafafa
color-gray = #CCC
color-meta = #808080
color-code = #c7254e
color-pre = #c0c5ce
color-border = #ddd

//主页及分页的相关参数
width-main = 1300px
width-post = 950px
width-phone = 568px

//根据宽度设定的三个阶段Media
phone = "only screen and (max-width: " + width-phone + ")"
mini = "only screen and (max-width: " + width-post + ")"
medium = "only screen and (max-width: " + width-main + ") and (min-width: " + width-post + ")"

//Font
font-default = "Helvetica Neue", "Helvetica", "Microsoft YaHei", "WenQuanYi Micro Hei", Arial, sans-serif
font-serif = "Garamond", "Georgia", serif
font-mono = Menlo, Monaco, Consolas, Courier New, monospace, "Microsoft YaHei", "WenQuanYi Micro Hei"
font-custom-family = "American_Typewriter"
font-custom-filename = americantypewriter-webfont
font-icon-family = "FontAwesome"
font-icon-filename = fontawesome-webfont
font-icon-version = 4.6.3
font-size = 16px
line-height = 1.5

font-smoothing()
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale